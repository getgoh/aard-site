// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Item {
  id           String @id
  name         String
  type         Int
  level        Int
  flags        String
  value        Int
  weight       Int
  wearloc      Int
  fromclanname String
  itemscore    Int
  keywords     String
}

model ItemType {
  id   Int    @id @default(autoincrement())
  type String
}

model WearLoc {
  id       Int    @id @default(autoincrement())
  location String
}

